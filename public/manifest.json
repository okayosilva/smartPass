{
  "manifest_version": 3,
  "name": "SmartPass",
  "version": "1.0.0",
  "description": "Smart Pass integrates a password generator into your flow. Create strong passwords instantly without opening external tabs.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "clipboardWrite",
    "alarms",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": { "service_worker": "background.js" }
}
